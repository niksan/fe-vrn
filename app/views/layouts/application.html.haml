!!!
%html
%head
  %title FeVrn
  = stylesheet_link_tag 'application', media: 'all'
  = javascript_include_tag 'application'
  = csrf_meta_tags
  = include_gritter
%body
  = gflash
  = gritter_flash_messages
  .container
    .raw
      .navbar
        .navbar-inner
          = link_to image_tag('logo.png'), root_path, id: 'logo'
          #slogans_block
            .first Свободная энергия
            .second Free energy
          #contacts_block
            .phone
              %span.prefix +7 (903)
              %span.number 656-91-33
    .raw
      = render partial: 'shared/carousel', locals: { slides: @slides }
    .raw
      .span3
        = render '/shared/side_menu'
        #cart
          %h4 Ваша корзина: 
          = render partial: 'shared/cart_content', locals: { cart: @cart }
      .span1
      .span8
        = notice
        = alert
        #content= yield
