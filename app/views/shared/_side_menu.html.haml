%ul.nav.nav-list.well
  - @pages.each do |page|
    %li= link_to page.title, page_path(page)
  .divider
  %li.nav-header Категории
  - @root_categories.each do |cat|
    %li= link_to cat.name, category_path(cat)
  .divider
  %li.nav-header Статьи
  - @articles.each do |article|
    %li= link_to article.title, article_path(article)
