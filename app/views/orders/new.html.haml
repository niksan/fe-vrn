%h1 Оформление заказа

= form_for :order do |f|
  .control-group
    = f.label :first_name
    .controls
      = f.text_field :first_name
  .control-group
    = f.label :last_name
    .controls
      = f.text_field :last_name
  .control-group
    = f.label :phone
    .controls
      = f.text_field :phone
  .control-group
    = f.label :email
    .controls
      = f.email_field :email
  .control-group
    = f.label :address
    .controls
      = f.text_area :address
  .control-group
    = f.label :additional
    .controls
      = f.text_area :additional
  .form-actions
    = f.submit t('order.create'), class: 'btn btn-primary btn-large'
